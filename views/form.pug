extends layout
include utils
append head
  link(rel="stylesheet" href="/stylesheets/records.css")
  //- add page specific js
  script(src="/javascripts/records.js" type="module" defer)
block content
    include navbar

    +validationErrorSummary(errors)
    form(action='/records/new' method='post' class='record-form')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('title', 'Title', 'title', title)
        +field('desc', 'Description', 'description', description, 'textfield')
        button(type='submit' class='record-submit') submit
